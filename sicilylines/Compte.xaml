<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="sicilylines.Compte"
             Title="Modifier Coordonnées">



                <VerticalStackLayout Spacing="10" Padding="20">
                    <Label Text="Coordonnées" FontSize="24" HorizontalOptions="Center"/>

                    <Entry x:Name="PseudoEntry" 
                   Placeholder="Pseudo" 
                   IsEnabled="False"
                   Text="{Binding Pseudo}"/>

                    <Entry x:Name="AddressEntry" 
                   Placeholder="Adresse"
                   Text="{Binding Adresse}"/>

                    <Entry x:Name="PostalCodeEntry" 
                   Placeholder="Code Postal"
                   IsEnabled="False" 
                   Text="{Binding CP}"/>

                    <Entry x:Name="PhoneEntry" 
                   Placeholder="Téléphone"
                   Keyboard="Telephone"
                   Text="{Binding Tel}"/>

                    <Button Text="Enregistrer les modifications"
                    BackgroundColor="#3498db"
                    TextColor="White"
                    Clicked="Button_Clicked"
                    HorizontalOptions="Center"
                    WidthRequest="250"
                    CornerRadius="10"/>
                </VerticalStackLayout>

</ContentPage>