<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="sicilylines.PageBouton"
             Title="Page Bouton">
    <ScrollView>
        <VerticalStackLayout 
            Spacing="25" 
            Padding="30,0" 
            VerticalOptions="Center">

            <Label 
                Text="Bienvenue"
                FontSize="32"
                HorizontalOptions="Center" />

            <Button 
                x:Name="ModifyCoordinatesButton"
                Text="Modifier ses coordonnées"
                SemanticProperties.Hint="Permet de modifier les coordonnées du client"
                Clicked="ModifyCoordinatesButton_Clicked"
                HorizontalOptions="Center"
                WidthRequest="300"
                BackgroundColor="#3498db"
                TextColor="White"
                CornerRadius="10"/>

            <Button 
                x:Name="ListReservationsButton"
                Text="Lister ses réservations"
                SemanticProperties.Hint="Affiche la liste des réservations du client"
                Clicked="ListReservationsButton_Clicked"
                HorizontalOptions="Center"
                WidthRequest="300"
                BackgroundColor="#2ecc71"
                TextColor="White"
                CornerRadius="10"/>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>