<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="sicilylines.reservation"
             BackgroundColor="#f5f5f5"
             Title="Mes Réservations">

    <StackLayout>
        <!-- Titre pour les traversées futures -->
        <Label Text="Traversées à venir" 
               FontSize="18" 
               FontAttributes="Bold"
               Margin="10,15,10,5"
               TextColor="#333333"/>

        <!-- ListView pour les traversées futures -->
        <ListView x:Name="FutureReservationsListView"
                  HasUnevenRows="True"
                  SeparatorVisibility="Default"
                  SelectionMode="None">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <ViewCell>
                        <Frame Margin="10,5" 
                               Padding="10" 
                               BorderColor="#dddddd"
                               BackgroundColor="Green">

                            <Grid RowDefinitions="Auto,Auto,Auto,Auto,Auto,Auto" 
                                  ColumnDefinitions="*,Auto">

                                <!-- Nom réservation et ID -->
                                <Label Grid.Row="0" Grid.Column="0"
                                       Text="{Binding NOM}"
                                       FontSize="16"
                                       FontAttributes="Bold" />
                                

                                <Label Grid.Row="4" Grid.Column="0" Grid.ColumnSpan="2"
                                       Text="{Binding DATETRAVERSE, StringFormat='{0:dd/MM/yyyy}'}"
                                       FontSize="14" />
                            </Grid>
                        </Frame>
                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>

        <!-- Titre pour les traversées passées -->
        <Label Text="Traversées passées" 
               FontSize="18" 
               FontAttributes="Bold"
               Margin="10,15,10,5"
               TextColor="#333333"/>

        <!-- ListView pour les traversées passées -->
        <ListView x:Name="PastReservationsListView"
                  HasUnevenRows="True"
                  SeparatorVisibility="Default"
                  SelectionMode="None">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <ViewCell>
                        <Frame Margin="10,5" 
                               Padding="10" 
                               BorderColor="#dddddd"
                               BackgroundColor="Gray">

                            <Grid RowDefinitions="Auto,Auto,Auto,Auto,Auto,Auto" 
                                  ColumnDefinitions="*,Auto">

                                <!-- Nom réservation et ID -->
                                <Label Grid.Row="0" Grid.Column="0"
                                       Text="{Binding NOM}"
                                       FontSize="16"
                                       FontAttributes="Bold" />

                                <Label Grid.Row="4" Grid.Column="0" Grid.ColumnSpan="2"
                                       Text="{Binding DATETRAVERSE, StringFormat='{0:dd/MM/yyyy}'}"
                                       FontSize="14" />
                            </Grid>
                        </Frame>
                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </StackLayout>
</ContentPage>